<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"           
          asp-href-include="/lib/bootstrap/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link asp-href-include="lib/font-awesome/css/*.css" rel="stylesheet" />
    <title>Store</title>
</head>
<body>

    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <span><a class="navbar-brand" href="/">STORE</a></span>
        <div class="navbar-expand float-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </nav>

    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
